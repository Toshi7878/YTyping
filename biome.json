{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended",
      "project": "recommended"
    },
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "info"
      },
      "suspicious": {
        "noUnknownAtRules": "info"
      },
      "complexity": {
        "noImportantStyles": "info"
      },
      "a11y": {
        "useKeyWithClickEvents": "info",
        "noStaticElementInteractions": "info"
      },
      "style": {
        "noCommonJs": "error",
        "noDefaultExport": "error",
        "noNamespace": "error",
        "useAsConstAssertion": "error",
        "noDoneCallback": "error",
        "noEnum": "error",
        "noExportedImports": "error",
        "noParameterAssign": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "next.config.js",
        "drizzle.config.ts",
        "postcss.config.mjs",
        "**/layout.tsx",
        "**/page.tsx",
        "**/loading.tsx",
        "**/error.tsx",
        "**/not-found.tsx",
        "**/auth.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
